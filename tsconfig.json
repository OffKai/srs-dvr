{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"checkJs": true,
		"lib": ["ESNext"],
		"module": "Node18",
		"moduleResolution": "Node16",
		"sourceMap": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2024",
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"types": ["vitest/globals"]
	},
	"include": [
		"src", //
		"scripts",
		".prettierrc.cjs",
		"eslint.config.js",
		"tsup.config.ts",
		"vitest.config.ts"
	]
}
